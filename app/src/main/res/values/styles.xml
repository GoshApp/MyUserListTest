<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/white</item>
        <item name="android:titleTextStyle">@color/dark</item>
        <item name="subtitleTextColor">@color/black_66</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/action_button_padding</item>
    </style>

</resources>
